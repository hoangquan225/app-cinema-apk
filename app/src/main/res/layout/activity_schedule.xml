<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.listFilm.ListFilm">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="359dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center|center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:contentDescription="Logo"
                        android:src="@drawable/logo"/>

                <TextView
                        android:id="@+id/textHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PVR Cinemas"
                        android:textSize="20dp"
                        android:textColor="@color/textWhite"
                        android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:text="Chọn ngày"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal|top"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                >
                <GridLayout
                        android:id="@+id/gridLayoutDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="4"
                        android:rowCount="1"
                        android:layout_margin="16dp"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                </GridLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:text="Chọn giờ"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal|top"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|top"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
            >

                <RadioGroup
                        android:id="@+id/radioTime"
                        android:hint="Chọn Time"
                        android:orientation="horizontal"
                        android:textColorHint="#325535"
                        android:textColor="#FFFFFF"
                        android:layout_width="340dp"
                        android:layout_height="55dp"
                        android:layout_alignParentTop="true"
                >
                    <RadioButton
                            android:id="@+id/time09"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="16dp"
                            android:text="09:00"
                            android:tag="9"
                            android:textColorHint="#325535"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rectangle_"
                    />
                    <RadioButton
                            android:id="@+id/time12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12:00"
                            android:layout_marginRight="16dp"
                            android:tag="12"
                            android:textColorHint="#325535"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rectangle_"/>
                    <RadioButton
                            android:id="@+id/time15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="16dp"
                            android:text="15:00"
                            android:tag="15"
                            android:textColorHint="#325535"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rectangle_"
                    />
                    <RadioButton
                            android:id="@+id/time18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="18:00v"
                            android:tag="18"
                            android:textColorHint="#325535"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rectangle_"/>
                </RadioGroup>
            </LinearLayout>

            <Button
                    android:id="@+id/btnSchedule"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:text="Chọn lịch"
                    android:textColor="#FFFFFF"
            />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
